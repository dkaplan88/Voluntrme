<div class="event"> 
	
	<div class="facebook">		
			<% unless current == nil %>
					<p><%= image_tag current.image %></p>
			<% end %>

		  <% if session[:volunteer_id] %>
				<ul>
					<% unless current == nil %>
					<li>Logged in as<br> <%=current.name%></li><br>
					<li><%= link_to "My Profile", volunteer_url(session[:volunteer_id]) %> <br> <%= link_to "Log out", log_out_url %></li>
					<% end %>

				</ul>
		  <% else %>
				<ul>
					<li><%= link_to "Sign up", new_volunteer_url %> or <%= link_to "log in", log_in_url  %></li>
				</ul>
		  <% end %>
		</div>
	
	<div class = "table_body">
	  <table>
	    <tr>
	      <th>Name</th>
	      <th>Organization</th>
	      <th>Location</th>
	      <th>Category</th>
	    </tr>

	  <% @events.each do |event| %>
	    <tr>
	      <td><%= link_to event.name, event %></td>
	      <td><%= event.organization.name %></td>
	      <td><%= event.location %></td>
	      <td><%= event.category %></td>
	    </tr>
	  <% end %>
	  </table>
	</div>
	
	
</div>