<div class="org">
<body>
	<h1>Listing organizations</h1>


<%= link_to 'New Organization', new_organization_path %><br><br>

<table>
  <tr>
    <th>Category</th>
    <th>Name</th>
    <th>Location</th>
    <th>Contact</th>
    <th>Phone</th>
  </tr>

<% @organizations.each do |organization| %>
  <tr>
    <td><%= organization.category.upcase %></td>
    <td><%= link_to organization.name, organization %></td>
    <td><%= organization.location %></td>
    <td><%= organization.contact %></td>
    <td><%= organization.phone %></td>
  </tr>
<% end %>
</table>
<br />

<!-- For Admin Use -->
<%#= link_to 'Edit', edit_organization_path(organization) %>
<%#= link_to 'Destroy', organization, confirm: 'Are you sure?', method: :delete %>
</body>
</div>
