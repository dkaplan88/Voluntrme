<p id="notice"><%= notice %></p>

<p>
  <b>Category:</b>
  <%= @organization.category %>
</p>

<p>
  <b>Name:</b>
  <%= @organization.name %>
</p>

<p>
  <b>Location:</b>
  <%= @organization.location %>
</p>

<p>
  <b>Contact:</b>
  <%= @organization.contact %>
</p>

<p>
  <b>Phone:</b>
  <%= @organization.phone %>
