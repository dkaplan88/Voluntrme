<h2>Events:</h2>
<table>
	<tr>
		<th>Name</th>
		<th>Description</th>
		<th>Location</th>
	</tr>
<% @organization.events.each do |e| %>
	<tr>
		<td><%= e.name %></td>
		<td><%= e.description %></td>
		<td><%= e.location %></td>
	</tr>
<% end %>
</table>
